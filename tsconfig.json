{
    "compilerOptions": {
        "target": "es5",
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "jsx": "react",
        "skipLibCheck": true,
        "preserveConstEnums": true,
        "lib": [
            "es2016",
            "dom"
        ]
    },
    "typeRoots": [
        "./node_modules/@types"
    ],
    "include": [
        "./src/**/**",
        "declarations.d.ts"
    ]
}
